@model FinalProject.Models.FeedOptions
@{
	ViewBag.Title = "Input";
}

<h2>Input</h2>
<div class="form-group">
	<fieldset>
		<legend>Select Input Texts to Feed Bot</legend>
		@using (Html.BeginForm("Generate", "ChatBot", FormMethod.Post, new { @class = "form-inline", enctype = "multipart/form-data" }))
			{
			@Html.AntiForgeryToken()
			<label for="suggested">Suggested</label>
			@Html.EditorFor(x => x.Suggested)<br />
			<label for="bibble">Bibble</label>
			@Html.EditorFor(x => x.Bibble)<br />
			<label for="smash">Smash Bros Fanfic</label>
			@Html.EditorFor(x => x.Smash)<br />
			<label for="pdf">PDF</label>
			@Html.EditorFor(x => x.PDF)<br />
			<label for="custom">Enter Your Own Text</label><br />
			@Html.TextAreaFor(x => x.CustomText, new { rows = 10, cols = 100 })<br />
			<label for="file">Upload a File (.txt or .pdf)</label>
			@Html.TextBoxFor(x => x.CustomFile, new { type = "file" })<br />
			@Html.ValidationMessageFor(x => x.CustomFile, "", new { @class = "error" })<br />
			<input type="submit" value="Generate" class="btn btn-info pull-Left" />
			}
		@if (ViewBag.Message != null)
		{
			<script type="text/javascript">
				window.onload = function () {
					alert("@ViewBag.Message");
				}
			</script>
		}
	</fieldset>
</div>

