@model FinalProject.Models.Favorites
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>Favorite</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Added)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Added)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Quote)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Quote)
		</dd>
	</dl>
	@using (Html.BeginForm("Delete", "ChatBot", FormMethod.Post, new { @class = "form-inline", enctype = "multipart/form-data" }))
	{
		@Html.AntiForgeryToken()
		<div class="form-actions no-color">
			@* ADDED: Created inline function to open dialog bog asking for delete confirmation *@
			<input type="submit" value="Delete" class="btn btn-default" onclick="return confirm('Are you sure you want to delete this item?')" />
			@Html.ActionLink("Back to Hall of Quotes", "HallOfQuotes")
		</div>
	}
</div>


